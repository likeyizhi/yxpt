<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="match_parent"
    tools:context="com.bbld.yxpt.activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_mapView"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapView">
        </com.baidu.mapapi.map.MapView>
    </RelativeLayout>
    <!--搜索栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llSearchLoc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_borderyuan5_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dw_top"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvCurrentAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="定位中..."
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>
       <!-- <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_borderyuan5_white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/search"/>
        </LinearLayout>-->
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/rlSecond">
        <LinearLayout
            android:id="@+id/llBottom"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlBottomWhite"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >
                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:src="@mipmap/xia"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llBottomIn"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="门店名"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="0m"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="#000000"/>
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="地址"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/dh_home"
                        android:layout_weight="1"
                        android:text="电话"
                        android:padding="5dp"
                        android:textColor="#0AD28A"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/go_home"
                        android:layout_weight="1"
                        android:text="导航"
                        android:textColor="#0AD28A"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/tvOpenTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业时间:8:00-17:00"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.bbld.yxpt.widget.CircleImageView
            android:id="@+id/ivScanCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llBottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-35dp"
            android:src="@mipmap/saoma"
            android:padding="2dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/ivLeft01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llBottom"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@mipmap/iv_left_01"/>
        <RelativeLayout
            android:id="@+id/rlRight01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_above="@+id/llBottom"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_right_01"
                />
            <com.bbld.yxpt.widget.CircleImageView
                android:id="@+id/ivRight01"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/head"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivLeft02"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/ivLeft01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/iv_left_02"/>
        <ImageView
            android:id="@+id/ivRight02"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/rlRight01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="5dp"
            android:src="@mipmap/saoma3"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlSecond"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
android:visibility="gone"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="40dp"
            >
            <ListView
                android:id="@+id/lvShopListPage"
                android:layout_marginTop="20dp"
                android:divider="#eeeeee"
                android:dividerHeight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivScanCode02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/saoma2"/>
    </RelativeLayout>
</RelativeLayout>
