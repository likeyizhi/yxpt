<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back" />
        <View
            android:layout_width="1dp"
            android:layout_marginTop="6dp"
            android:layout_height="18dp"
            android:background="#999999"
            android:layout_marginLeft="7dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#666666"
            android:text="意见反馈"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_Describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_borderyuan5_shixin"
            android:gravity="start"
            android:hint="请描述下你的问题"
            android:textColorHint="#999999"
            android:lines="6"
            android:maxLength="140"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="140"
            android:layout_marginRight="10dp"
            android:textColor="#0bd28a"
            android:layout_alignBottom="@+id/et_Describe"
            android:layout_alignEnd="@+id/et_Describe" />
    </RelativeLayout>
    <EditText
        android:id="@+id/etTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_borderyuan5_shixin"
        android:gravity="start"
        android:maxLength="11"
        android:hint="请输入您的联系方式"
        android:textColorHint="#999999"
        android:lines="1"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:background="@drawable/bg_feedback0bd28a"
        android:text="确认提交"
        android:textColor="#ffffff" />
</LinearLayout>