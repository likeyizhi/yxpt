<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/back" />
        <View
            android:layout_width="1dp"
            android:layout_marginTop="6dp"
            android:layout_height="18dp"
            android:background="#999999"
            android:layout_marginLeft="7dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#666666"
            android:text="修改密码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />
    <ImageView
        android:id="@+id/iv123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@mipmap/pwd01"/>
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="140dp">
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="60dp"
            android:textColor="#999999"
            android:textColorHint="#cccccc"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@null"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#eeeeee"
            ></View>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        >
        <EditText
            android:id="@+id/etCode"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#999999"
            android:textColorHint="#cccccc"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:digits="1234567890"
            android:textSize="14sp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/etCode"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#eeeeee"
            ></View>
        <TextView
            android:id="@+id/tvSendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  发送  "
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#999999"
            android:background="@drawable/bg_borderyuan40"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/etCode"
            android:layout_alignBottom="@+id/etCode"
            android:layout_alignEnd="@+id/etCode" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etNewPwd1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#999999"
            android:textColorHint="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="20dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="新密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/etCode"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="#eeeeee"
            ></View>
        <EditText
            android:id="@+id/etNewPwd2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#999999"
            android:textColorHint="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="14sp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="重复密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/etCode"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="40dp"
            android:background="#eeeeee"
            ></View>
    </LinearLayout>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_borderyuan0bd28a40"
        android:text="下一步"
        android:textColor="#ffffff" />
</LinearLayout>