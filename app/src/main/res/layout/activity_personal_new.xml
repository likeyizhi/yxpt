<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#0bd28a"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/backwhite" />
        <View
            android:layout_width="1dp"
            android:layout_marginTop="6dp"
            android:layout_height="18dp"
            android:background="#ffffff"
            android:layout_marginLeft="7dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="个人中心"/>

        <ImageView
            android:id="@+id/ivRing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/lingdg"
            />
    </LinearLayout>

    <LinearLayout
        android:background="#0bd28a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.bbld.yxpt.widget.CircleImageView
            android:id="@+id/ivShopImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/head"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="您还未登录"/>
        <TextView
            android:id="@+id/tvTiXian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="提现"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#0bd28a"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPerson01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0bd28a"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="消费金额"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvXF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPerson02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:text="已返现金额"/>
            <TextView
                android:id="@+id/tvJL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPerson03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="已提现金额"
                android:textSize="13sp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tvMyOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lvOrder"
            android:divider="#eeeeee"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:id="@+id/tvUseCount"
        android:paddingTop="5dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cccccc"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>