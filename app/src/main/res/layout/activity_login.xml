<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
       >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/bigcha" />

        <View
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#666666"
            android:id="@+id/view" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="登录"
            android:textColor="#666666"
            android:textSize="16sp"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/tvCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0bd28a"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="创建新帐号"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <ImageView
        android:layout_width="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:src="@mipmap/logo7"
        />

    <EditText
        android:id="@+id/etAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:hint="手机号"
        android:lines="1"
        android:digits="1234567890"
        android:singleLine="true"
        android:textColorHint="#999999"
        android:textSize="14sp"
        android:theme="@style/MyEditText" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:lines="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <EditText
            android:id="@+id/etCode"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColorHint="#999999"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:clickable="true"
            android:textSize="14sp"
            android:background="@null"
            android:theme="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="验证码"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/etCode"
            />
        <TextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  发送  "
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_borderyuan40"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/etCode" />
    </RelativeLayout>
    <EditText
        android:id="@+id/etPwd"
        android:theme="@style/MyEditText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="#999999"
        android:inputType="textPassword"
        android:background="@null"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:lines="1"
        android:visibility="gone"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:hint="密码"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:lines="1"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        ></View>

    <TextView
        android:id="@+id/tvForgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="#0bd28a"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="忘记密码"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_borderyuan0bd28a"
        android:text="登录"
        style="?android:attr/borderlessButtonStyle"

        android:textColor="#ffffff"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:src="@mipmap/qq1"/>
        <ImageView
            android:id="@+id/ivZFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/qq1"/>
        <ImageView
            android:id="@+id/ivWX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/weixin1"/>

    </LinearLayout>
</LinearLayout>