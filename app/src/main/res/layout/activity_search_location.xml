<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:paddingTop="25dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back"/>
        <LinearLayout
            android:id="@+id/ll_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/cha"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/et_search_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="#A9A9A9"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="请输入您要查询的地址"/>
        <ImageButton
            android:id="@+id/ib_search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="10dp"
            android:src="@mipmap/search"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvSearchLocation"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <RelativeLayout
        android:id="@+id/rlCity"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lvChangeCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <com.bbld.yxpt.widget.SideBar
            android:id="@+id/sidrbar"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_height="fill_parent"
            />
        <TextView
            android:id="@+id/dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="#999999"
            android:layout_centerInParent="true"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textSize="30.0dip"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
